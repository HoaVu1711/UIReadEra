<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.format.FormatFragment">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:paddingTop="@dimen/_8sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:inputType="text"
            android:lines="5"
            android:maxLines="5"
            android:text="The book reader allows reading books
magazines, articles and documents of all formats
for free in one ap

Files of different formats found on the device: "
            android:background="@drawable/ic_bg_text_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="@dimen/_10sdp"
            android:id="@+id/rev_format"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>