<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/_10sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@drawable/custom_bg_avatar_book"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:backgroundTint="@color/black"
        android:id="@+id/avatar_book"
        android:layout_width="@dimen/_60sdp"
        android:layout_height="@dimen/_100sdp"/>
    <TextView
        android:id="@+id/tv_title_book"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/avatar_book"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:text="The Heart of Hell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_author"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/avatar_book"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/tv_title_book"
        android:text="The Heart of Hell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_describe"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/avatar_book"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_below="@+id/tv_author"
        android:text="The Heart of Hell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/layout"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_toRightOf="@+id/avatar_book"
        android:layout_below="@+id/tv_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/btn_star"
            android:src="@drawable/ic_star"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/btn_tick"
            android:src="@drawable/ic_tick"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/btn_collection"
            android:src="@drawable/ic_book_small"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/close_book"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_close_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>